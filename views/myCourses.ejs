    <!-- Header -->
<%- include('templates/header') -%>
    <!-- Internal Style sheet -->
    <link rel="stylesheet" href="./../public/css/myCoursesStyle.css">
    
    <div class="limiterCourses">
        <div class="containerCourses">
            <h2 class="coursesOwner">Current courses of: userName</h2>
            <ul class="coursesList">
                <% for(var i=0; i<9; i++){ %>
                    <li class="course">
                        <img src="./../public/img/logoHireATutor.png" class="courseImg">
                        <p class="courseName">course Name <%= i %></p>
                    </li>
                <% } %>
            </ul>
        </div>

        <div class="courseCard">
            <form action="" method="POST" class="courseForm">
                <p class="courseNameEdit">Course Name to Edit</p>
                <div class="field">
                    <input type="text" placeholder="Course Name" name="courseName" class="editCourseField" required> 
                <span id="icon-name" class="icon-form">
                    <i class="fas fa-user"></i>
                </span>
                </div>
                <div class="field">
                    <input type="text" placeholder="Course Field" name="courseField" class="editCourseField" required> 
                    <span id="icon-name" class="icon-form">
                        <i class="fas fa-user"></i>
                    </span>
                </div>
                
                
                <button type="submit" class="btn-submit">
                    Submit
                </button>
    
            </form>
        </div>
    </div>

    <script type="text/javascript" src="/public/js/myCourses.js"></script>
</body>
</html>